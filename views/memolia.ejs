    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            height: 100vh;
            width: 100vw;
            font-family: sans-serif;
            overflow: hidden;
        }
        
        .scene, canvas {
            position: absolute;
            height: 100%;
            width: 100%;
        }
        #mobileInterface {
            position: absolute;
            width: 100%;
            height: 120px;

            pointer-events: none;
            z-index: 11;
            top: calc(100% - 120px);
            left: 0;
            touch-action: manipulation;
            
        }
        #joystickWrapper1 {
            pointer-events: auto;
            display: block;
            position: absolute;
            left: calc(50% - 60px);
            background-color: transparent;
           
            transform: translateY(-50%);

            z-index: 12;
            touch-action: manipulation;
        }
    </style>
</head>
